# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Use Azure OpenAI (set to "true" to use Azure, "false" to use standard OpenAI)
USE_AZURE_OPENAI=false

# Standard OpenAI API Configuration (if USE_AZURE_OPENAI=false)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI Configuration (if USE_AZURE_OPENAI=true)
# You need an Azure OpenAI resource with a GPT-4o-realtime deployment
# Get your API key from the Azure portal under your OpenAI resource
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Format: https://your-resource-name.openai.azure.com
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com

# Find available API versions in the Azure OpenAI documentation
# This is the version that supports Realtime API
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# The deployment name of your GPT-4o-realtime model in Azure
# Create this in the Azure OpenAI Studio
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
